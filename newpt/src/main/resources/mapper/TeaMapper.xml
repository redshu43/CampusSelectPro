<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.newpt.mapper.TeaMapper">
    <select id="ifTeaExist" parameterType="String" resultType="java.lang.Integer">
        select COUNT(*)
        from tea
        where name = #{name}
    </select>

    <select id="findByAccount" parameterType="com.cy.newpt.pojo.entity.Tea">
        select *
        from tea
        where account = #{account}
    </select>

    <update id="updateByAccount" parameterType="com.cy.newpt.pojo.entity.Tea">
        update tea
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="age != null">age = #{age},</if>
            <if test="hireDate != null">hire_date = #{hireDate},</if>
            <if test="edu != null">edu = #{edu},</if>
            <if test="title != null">title = #{title},</if>
            <if test="password != null">password = #{password}</if>
        </set>
        where account = #{account}
    </update>
</mapper>